import { Address } from 'viem';

// MNEE Token Contract
export const MNEE_ADDRESS: Address = '0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF';

// VaultLink Contract Addresses (update after deployment)
export const CONTENT_VAULT_ADDRESS: Address = 
  (process.env.NEXT_PUBLIC_CONTENT_VAULT_ADDRESS as Address) || '0x0';

export const REVENUE_STREAMER_ADDRESS: Address = 
  (process.env.NEXT_PUBLIC_REVENUE_STREAMER_ADDRESS as Address) || '0x0';

export const SPLIT_PAYMENT_ADDRESS: Address = 
  (process.env.NEXT_PUBLIC_SPLIT_PAYMENT_ADDRESS as Address) || '0x0';

// Minimal ERC20 ABI for MNEE token
export const MNEE_ABI = [
  {
    inputs: [{ name: 'account', type: 'address' }],
